ExtraLeftBox:AddSlider("WalkspeedSlider", {
    Text = "Walkspeed",  -- Label for the slider
    Min = 16,  -- Minimum walkspeed (default walkspeed in Roblox)
    Max = 500,  -- Maximum walkspeed value
    Default = 16,  -- Default value for walkspeed (16 is the default)
    Rounding = 1,  -- Round to 1 decimal place
    Callback = function(value)
        -- Set the LocalPlayer's walkspeed based on the slider value
        LocalPlayer.Character:WaitForChild("Humanoid").WalkSpeed = value
        print("Walkspeed set to: " .. value)
    end
})

-- Add a Toggle button for Ctrl + Click TP in the UI
ExtraLeftBox:AddToggle("CtrlClickTP", {
    Text = "Ctrl + Click TP",
    Default = false,
    Tooltip = "Toggle Ctrl + Click to teleport.",
    Callback = function(value)
        isCtrlClickTPEnabled = value  -- Update the state of the toggle

        if value then
            -- Enable Ctrl + Click Teleport
            handleCtrlClickTP()
            print("Ctrl + Click TP Enabled")
        else
            -- Disable Ctrl + Click Teleport
            isCtrlPressed = false
            disconnectCtrlClickTP()  -- Disconnect event listeners to disable the feature
            print("Ctrl + Click TP Disabled")
        end
    end
})

ExtraRightBox:AddLabel("RNG Dropper Tycoon")

-- Add Discord Invite Button
ExtraRightBox:AddButton("Copy Discord Invite Link", function()
    showDiscordInvite()  -- Display the Discord invite link in the output console for users to copy
end)
