})

MainAutoRightBox:AddToggle("AutoUpgradeLauncher", {
    Text = "Auto Upgrade Launcher",
    Default = false,
    Tooltip = "Toggle auto upgrade launcher.",
    Callback = function(value)
        if value then
            -- Start the Auto Upgrade task
            if AutoUpgradeConnection then
                AutoUpgradeConnection:Disconnect()
            end

            AutoUpgradeConnection = RunService.Heartbeat:Connect(function()
                pcall(autoUpgradeLauncher)  -- Automatically trigger the upgrade
            end)

            print("Auto Upgrade Launcher Enabled")
        else
            -- Stop the Auto Upgrade task
            if AutoUpgradeConnection then
                AutoUpgradeConnection:Disconnect()
                AutoUpgradeConnection = nil
            end

            print("Auto Upgrade Launcher Disabled")
        end
    end
})

